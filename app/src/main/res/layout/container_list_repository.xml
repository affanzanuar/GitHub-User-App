<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="7dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/toolbar_github"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="RtlSymmetry">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/tvRepoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repository Name"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created         : "
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvRepoName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvCreatedRepo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23-12-2014"
            android:textSize="16sp"
            android:textColor="@color/grey"
            app:layout_constraintStart_toEndOf="@id/tvCreated"
            app:layout_constraintTop_toTopOf="@id/tvCreated"
            app:layout_constraintBottom_toBottomOf="@id/tvCreated"/>

        <TextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Update  : "
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:textColor="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/tvCreated"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvLastUpdateRepo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23-12-2014"
            android:textSize="16sp"
            android:textColor="@color/grey"
            app:layout_constraintStart_toEndOf="@+id/tvLastUpdate"
            app:layout_constraintTop_toTopOf="@+id/tvLastUpdate"
            app:layout_constraintBottom_toBottomOf="@+id/tvLastUpdate"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>